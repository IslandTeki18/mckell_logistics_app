{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "~*": ["./*"]
    },
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "ES6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "jsx": "react",
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "scripts", "webpack", "jest"],
  "types": ["typePatches"]
}
